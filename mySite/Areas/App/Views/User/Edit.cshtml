@model mySite.Data.Models.ApplicationUser


<h1 class="text-info"> 유저 수정 </h1>

<div class="row">
    <div class="col-md-8">
        <form method="post" asp-action="Edit">
            <input asp-for="@Model.Id" hidden />
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NickName"></label>
                <input asp-for="NickName" disabled class="form-control"/>
                <span asp-validation-for="NickName" class="table-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" disabled class="form-control" />
                <span asp-validation-for="Email" class="table-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleId"></label>
                <select asp-for="RoleId" asp-items="@Model.RoleList" class="form-control">
                    <option disabled selected>--Role 선택--</option>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"> 업데이트 </button>
                <a asp-action="Index" class="btn btn-warning" style="width:auto">뒤로 가기</a>
            </div>

        </form>
    </div>

</div>


 