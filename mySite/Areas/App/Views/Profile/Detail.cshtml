@using Microsoft.AspNetCore.Identity
@model mySite.Models.ApplicationUser.ProfileListModel

@inject UserManager<IdentityUser> UserManager

<div class="container">

    <div class="container">
        유저 프로필
    </div>


    <div class="row userProfile">
        <div class="col-md-4">
            <div id="userProfileImage" style="background-image: url(@Model.Profiles.ProfileImageUrl);">
            </div>
            @if (User.Identity.Name == Model.Profiles.UserName)
            {
                <form method="post" enctype="multipart/form-data" asp-action="UploadProfileImage" asp-controller="Profile">
                    <div id="upload">
                        <label class="btn btn-primary btn-file">
                            찾아보기 
                            <input type="file" name="file" style="display:none" />
                        </label>
                    </div>
                    <button type="submit" id="btn-profile" class="btn btn-success">
                        확인
                    </button>
                </form>
            }
        </div>

        <div class="col-md-8">
            <span id="userName"> @Model.Profiles.UserName </span>

            @if (Model.Profiles.IsAdmin)
            {
                <span class="isAdmin">Admin</span>
            }

            <div> 유저 포인트: @Model.Profiles.UserPoints </div>
            <span> 가입한 날짜: @Model.Profiles.RegisteredDate </span>

        </div>

        <br />

    </div>
</div>