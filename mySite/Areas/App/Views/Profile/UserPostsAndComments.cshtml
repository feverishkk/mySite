
@model mySite.Models.ApplicationUser.ProfileListModel

    <div class="container">
        <h2> 유저 정보함 </h2>
    </div>

    <div class="container">


        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-posts" role="tab" aria-controls="pills-posts" aria-selected="true"> 작성글 목록</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-comments" role="tab" aria-controls="pills-comments" aria-selected="false">작성댓글 목록</a>
            </li>

        </ul>



        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-posts" role="tabpanel" aria-labelledby="pills-posts-tab">
                <table class=" table-hover table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>타입</th>
                            <th>제목</th>
                            <th>글쓴이</th>
                            <th>날짜</th>
                            <th>조회수</th>
                        </tr>
                    </thead>

                    @foreach (var post in Model.PostListings)
                    {
                        <tbody>
                            <tr>

                                <td> @post.postType  </td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Post" asp-route-postId="@post.Id">
                                        @post.Title (@post.CommentCount)
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Profile" asp-route-profileId="@post.AuthorId">
                                        @post.AuthorName
                                    </a>
                                </td>
                                <td>
                                    @post.DatePosted
                                </td>
                                <td>
                                    <span id="cntr">  </span>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>

            <div class="tab-pane fade" id="pills-comments" role="tabpanel" aria-labelledby="pills-comments-tab">
                <table class=" table-hover table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>번호</th>
                            <th>내용</th>
                            <th>글쓴이</th>
                            <th>날짜</th>
                            @*<th>조회수</th>*@
                        </tr>
                    </thead>

                    @foreach (var post in Model.Comments)
                    {
                        <tbody>
                            <tr>

                                <td> @*@post.Id*@  </td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Post" asp-route-postId="@post.Id">
                                        @post.CommentContent
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-controller="Profile" asp-route-profileId="@post.AuthorId">
                                        @post.AuthorName
                                    </a>
                                </td>
                                <td>
                                    @post.Created
                                </td>
                                <td>
                                    <span id="cntr">  </span>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>

