@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Role 리스트</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Upsert" asp-controller="Role" asp-area="App" class="btn btn-primary"> Role 생성하기 </a>
    </div>
</div>


<div class="p-4 border rounded">
    @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    Id
                </th>
                <th>
                    이름
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>

                    <td>
                        @item.Name
                    </td>

                    <td>
                        <div class="text-center">
                            <form asp-action="Delete" asp-route-id="@item.Id">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-info text-white" style="cursor:pointer">
                                    수정
                                </a>

                                <button type="submit" onclick="return confirm('정말로 삭제하시겠습니까?')" class="btn btn-danger">
                                    삭제
                                </button>

                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
</div>







