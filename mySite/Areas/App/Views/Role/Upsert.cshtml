@model Microsoft.AspNetCore.Identity.IdentityRole


@{ 
    var title = "Role 생성";
}


<form method="post">

    @if(Model!=null && !String.IsNullOrEmpty(Model.Id))
    {
        title = "Role 수정";
        <input asp-for="@Model.Id" hidden />
    }

    <div class="border p-3 bg-white">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Id" readonly class="form-control" />
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" autocomplete="off" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if(Model!=null && !String.IsNullOrEmpty(Model.Id))
                            {
                                <input type="submit" class="btn btn-info w-100" value="수정하기" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-primary w-100" value="생성하기" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"> 뒤로가기 </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</form>