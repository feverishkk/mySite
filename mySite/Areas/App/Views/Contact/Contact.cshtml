@model mySite.Models.Contact.SendMail

<h1>Contact</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.To"></label>
        <input asp-for="@Model.To" type="text" class="form-control" placeholder="name" />
        <span asp-validation-for="@Model.To" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" type="text" class="form-control" placeholder="subject" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <textarea asp-for="@Model.Message" class="form-control" placeholder="messages"></textarea>
        <span asp-validation-for="@Model.Message" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> 전송 </button>

    <h5> @ViewBag.message </h5>

</form>