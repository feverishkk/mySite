@model mySite.Models.Post.DeletePostModel

<div class="container">
    <div class="row">

        <form asp-action="Delete" asp-controller="Post" asp-area="App" method="post">

            <div class="mt-xl-5">

                <h2 class="justify-content-lg-center">
                    @Model.PostTitle 을(를) 정말로 삭제하시겠습니까?
                </h2>
            </div>

            <br />

            <button asp-action="Delete" asp-controller="Post" asp-route-postId="@Model.PostId"
                    type="submit" class="btn btn-success ">
                확인
            </button>

            <a asp-action="Index" asp-controller="Post" class="btn btn-warning">
                취소
            </a>

        </form>
    </div>
</div>